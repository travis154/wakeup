.span2.top-block-span2
	p.top-block-like-menu
		span.top-block-likes
			strong(class="like_" + post._id)=post.likes
			a.btn.btn-small.approve(data-id=post._id, data-data='like')
				i.icon-thumbs-up
		span.top-block-dislikes
			strong(class="dislike_" + post._id)=post.dislikes
			a.btn.btn-small.approve(data-id=post._id, data-data='dislike')
				i.icon-thumbs-down

